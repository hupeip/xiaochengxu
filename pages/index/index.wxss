/**index.wxss**/
.wrapper{
   position: relative; 
   width: 100%;
}
 .img-bg{
   width: 100%;
} 
.tips{
  position: absolute;
  width: 100%;
  height: 100rpx;
  top: 80rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
}
.animate-tip{
  animation: animate-tip 2s infinite linear;
}
@keyframes animate-tip {
  0% {
    transform: rotate(0deg)
  }
  25% {
    transform: rotate(3deg)
  }
  50% {
    transform: rotate(0deg)
  }
  75% {
    transform: rotate(-3deg)
  }
  100% {
    transform: rotate(0deg)
  }
}
.animate-act {
  position: absolute;
  top: 280rpx;
  left: -20rpx;
}
.animate-img {
  width: 300rpx;
  height: 160rpx;
}
.date-block{
  box-sizing: border-box;
  width: 88%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50rpx; 
  line-height: 80rpx;
  font-size: 30rpx;
  color: #7e7e7e;
  margin: 0 auto;
  padding: 0 15px;
  border: 4rpx #670c1d solid;
}
.date-box{
  display: flex;
}
.text{
  color: #333;
  width: 30%;
}
.date{ 
  display: inline-block;
  width: 75%;
  position: relative;
}
.icon-cal{
  position: absolute;
  width: 31rpx;
  height: 31rpx;
  margin-top: 24rpx;
  right: 20rpx;
  top: 0;
}
.bottom-block{
  position: absolute;
  bottom: 0;
  height: 312rpx;
  width: 100%;
  background: rgba(198, 15, 71, .9);
  border-radius: 100rpx 100rpx 0 0;
}
.text-block{
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx 0;
}
.btn-block{
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  height: 87rpx;
  line-height: 87rpx;
  background-color: #f8c13f;
  border-bottom: 4rpx #7f492e solid;
  font-size: 34rpx;
  color: #383030;
}